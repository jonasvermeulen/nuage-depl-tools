$TTL 1D
@       IN SOA {{ dns.domain }}. root.{{ dns.domain }}. (
                                        0       ; serial
                                        1D      ; refresh
                                        1H      ; retry
                                        1W      ; expire
                                        3H )    ; minimum

{{ ansible_default_ipv4.address | regex_replace('([0-9]+)\\.([0-9]+)\\.([0-9]+)\\.([0-9]+)$','\\2.\\1') }}.in-addr.arpa. NS {{ dns.domain }}.
{{ ansible_default_ipv4.address | regex_replace('([0-9]+)\\.([0-9]+)\\.([0-9]+)\\.([0-9]+)$','\\3.\\4') }} PTR {{ ansible_hostname }}.{{ dns.domain }}.

